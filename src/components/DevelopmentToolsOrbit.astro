---
// Este componente escanea automáticamente las carpetas de anillos para mostrar las herramientas
// Se espera una estructura de carpetas como:
// /public/icon/tools/anillo-0/
// /public/icon/tools/anillo-1/
// /public/icon/tools/anillo-2/
// /public/icon/tools/anillo-3/

// Función para obtener todos los archivos SVG de una carpeta pública
const getIconsFromFolder = (folderPath: string) => {
  // Usamos el sistema de archivos del lado del servidor de Astro
  const fs = import.meta.glob("/public/icon/tools/**/*.svg", { eager: true });

  // Filtrar archivos por la carpeta específica
  const folderIcons = Object.keys(fs)
    .filter((path) => path.includes(folderPath))
    .map((path) => {
      // Extraer nombre sin extensión del archivo SVG
      const fileName = path.split("/").pop()?.replace(".svg", "") || "";
      // Crear un nombre más legible para la herramienta
      const toolName = fileName
        .split("-")
        .map((word) => word.charAt(0).toUpperCase() + word.slice(1))
        .join(" ");

      // Ruta del icono relativa a "public"
      const iconPath = path.replace("/public", "");

      return {
        name: toolName,
        icon: iconPath,
      };
    });

  return folderIcons;
};

// Obtener iconos para cada anillo
const ring0Icons = getIconsFromFolder("/anillo-0/");
const ring1Icons = getIconsFromFolder("/anillo-1/");
const ring2Icons = getIconsFromFolder("/anillo-2/");
const ring3Icons = getIconsFromFolder("/anillo-3/");
---

<!-- TODO: Hacer que los iconos sean mas grandes, hacer que la ralla que funciona como scaner, sea mas chiquito y hacer que el top sea menos -->
<section class="tools-section w-full py-24">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold mb-4 text-white">
      Mis Herramientas de Desarrollo
    </h2>

    <div class="orbit-container flex justify-center items-center">
      <div class="orbit">
        <ul class="orbit-wrap">
          <!-- Centro -->
          <li class="orbit-center">
            <div class="orbit-center__icon">
              <!-- Ícono de código/desarrollo -->
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="28"
                height="28"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="code-icon"
              >
                <polyline points="16 18 22 12 16 6"></polyline>
                <polyline points="8 6 2 12 8 18"></polyline>
              </svg>
              <!-- Puntos de decoración -->
              <div class="center-dots">
                <div class="dot dot-1"></div>
                <div class="dot dot-2"></div>
                <div class="dot dot-3"></div>
              </div>
            </div>
          </li>

          <!-- Línea de Radar -->
          <div class="radar-line"></div>

          <!-- Línea Horizontal del Radar -->
          <div class="radar-bottom-line"></div>

          <!-- Anillo 0 (Más interno) - Herramientas más usadas -->
          {
            ring0Icons.length > 0 && (
              <li>
                <ul class="ring-0">
                  {ring0Icons.map((tool, index) => {
                    // Calcular ángulo para semicírculo inferior (180 a 360 grados)
                    const angle = 180 + (index * (180 / ring0Icons.length));
                    return (
                      <li
                        style={`transform: rotate(${angle}deg) translate(12.5em) rotate(-${angle}deg)`}
                      >
                        <div class="orbit-icon-wrapper" title={tool.name}>
                          <img
                            src={tool.icon}
                            alt={tool.name}
                            class="orbit-icon"
                          />
                          <span class="tool-name">{tool.name}</span>
                        </div>
                      </li>
                    );
                  })}
                </ul>
              </li>
            )
          }

          <!-- Anillo 1 -->
          {
            ring1Icons.length > 0 && (
              <li>
                <ul class="ring-1">
                  {ring1Icons.map((tool, index) => {
                    // Calcular ángulo para semicírculo inferior (180 a 360 grados)
                    const angle = 180 + (index * (180 / ring1Icons.length));
                    return (
                      <li
                        style={`transform: rotate(${angle}deg) translate(10em) rotate(-${angle}deg)`}
                      >
                        <div class="orbit-icon-wrapper" title={tool.name}>
                          <img
                            src={tool.icon}
                            alt={tool.name}
                            class="orbit-icon"
                          />
                          <span class="tool-name">{tool.name}</span>
                        </div>
                      </li>
                    );
                  })}
                </ul>
              </li>
            )
          }

          <!-- Anillo 2 -->
          {
            ring2Icons.length > 0 && (
              <li>
                <ul class="ring-2">
                  {ring2Icons.map((tool, index) => {
                    // Calcular ángulo para semicírculo inferior (180 a 360 grados)
                    const angle = 180 + (index * (180 / ring2Icons.length));
                    return (
                      <li
                        style={`transform: rotate(${angle}deg) translate(7.5em) rotate(-${angle}deg)`}
                      >
                        <div class="orbit-icon-wrapper" title={tool.name}>
                          <img
                            src={tool.icon}
                            alt={tool.name}
                            class="orbit-icon"
                          />
                          <span class="tool-name">{tool.name}</span>
                        </div>
                      </li>
                    );
                  })}
                </ul>
              </li>
            )
          }

          <!-- Anillo 3 (Más externo) - Herramientas menos usadas -->
          {
            ring3Icons.length > 0 && (
              <li>
                <ul class="ring-3">
                  {ring3Icons.map((tool, index) => {
                    // Calcular ángulo para semicírculo inferior (180 a 360 grados)
                    const angle = 180 + (index * (180 / ring3Icons.length));
                    return (
                      <li
                        style={`transform: rotate(${angle}deg) translate(5em) rotate(-${angle}deg)`}
                      >
                        <div class="orbit-icon-wrapper" title={tool.name}>
                          <img
                            src={tool.icon}
                            alt={tool.name}
                            class="orbit-icon"
                          />
                          <span class="tool-name">{tool.name}</span>
                        </div>
                      </li>
                    );
                  })}
                </ul>
              </li>
            )
          }
        </ul>
      </div>
    </div>
  </div>
</section>

<style>
  .tools-section {
    position: relative;
    overflow: hidden;
  }

  .orbit-container {
    position: relative;
    width: 100%;
    height: auto;
    min-height: 20em; /* Reducido para el semicírculo */
  }

  .orbit {
    position: relative;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: flex-start; /* Alineación superior para mostrar el semicírculo inferior */
  }

  .orbit-icon-wrapper {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .orbit-icon {
    width: 2.2em;
    height: 2.2em;
    padding: 0.3em;
    border-radius: 50%;
    background: #2a2a2a;
    display: block;
    transition: all 300ms ease-in-out;
    z-index: 60; /* Mayor que el z-index del centro para asegurar visibilidad */
  }

  .tool-name {
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translateX(-50%);
    background-color: rgba(0, 0, 0, 0.7);
    color: white;
    padding: 0.2em 0.5em;
    border-radius: 0.3em;
    font-size: 0.7em;
    white-space: nowrap;
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
    margin-top: 0.5em;
    z-index: 10;
  }

  .orbit-icon-wrapper:hover .tool-name {
    opacity: 1;
  }

  .orbit-icon-wrapper:hover .orbit-icon {
    transform: scale(1.2);
    background: #3182ce;
  }

  .orbit-wrap {
    height: 17.5em; /* La mitad de la altura original para el semicírculo */
    list-style: none;
    font-size: 1.3em;
    position: relative;
    width: 35em;
    margin: 0 auto;
    overflow: hidden; /* Oculta la parte inferior */
  }

  .orbit-wrap > li {
    position: absolute;
    left: 50%;
    top: 0%; /* Posición en la parte superior para semicírculo inferior */
    transform: translate(-50%, -50%);
  }

  /* Línea de radar que gira */
  .radar-line {
    position: absolute;
    top: 0%; /* Posición en la parte superior para semicírculo inferior */
    left: 50%;
    width: 17.5em;
    height: 1px;
    background: linear-gradient(to right, transparent, rgba(56, 189, 248, 0.8));
    transform-origin: left;
    z-index: 100;
    animation: radar-scan 10s linear infinite;
  }

  /* Línea superior (base del semicírculo inferior) */
  .radar-bottom-line {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 1px;
    background: linear-gradient(
      to right,
      transparent,
      rgba(71, 85, 105, 0.7),
      transparent
    );
    z-index: 40;
  }

  @keyframes radar-scan {
    0% {
      transform: rotate(0deg);
    }
    50% {
      transform: rotate(360deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }

  .orbit-wrap > li:hover ul {
    border-width: 2px;
    border-color: rgba(56, 189, 248, 0.8);
  }

  .orbit-wrap > li:hover ~ li ul {
    border-color: rgba(255, 255, 255, 0.2);
  }

  .orbit-wrap > li:hover ~ li ul li {
    opacity: 0.4;
  }

  .hidden {
    display: none !important;
  }

  ul[class^="ring"] {
    transition: all 300ms ease-in-out;
  }

  ul[class^="ring"] li {
    transition: all 300ms ease-in-out;
  }

  .ring-0 {
    width: 25em;
    height: 25em;
    animation: clockwiseRotate 35s linear infinite;
  }

  .ring-0 .orbit-icon-wrapper {
    animation: counterClockwiseRotate 35s linear infinite;
  }

  .ring-1 {
    width: 20em;
    height: 20em;
    animation: clockwiseRotate 30s linear infinite;
  }

  .ring-1 .orbit-icon-wrapper {
    animation: counterClockwiseRotate 30s linear infinite;
  }

  .ring-2 {
    width: 15em;
    height: 15em;
    animation: clockwiseRotate 25s linear infinite;
  }

  .ring-2 .orbit-icon-wrapper {
    animation: counterClockwiseRotate 25s linear infinite;
  }

  .ring-3 {
    width: 10em;
    height: 10em;
    animation: clockwiseRotate 20s linear infinite;
  }

  .ring-3 .orbit-icon-wrapper {
    animation: counterClockwiseRotate 20s linear infinite;
  }

  ul[class^="ring"] {
    border: solid 1px rgba(56, 189, 248, 0.3);
    position: relative;
    padding: 0;
    border-radius: 50%;
    list-style: none;
    box-sizing: content-box;
    background: rgba(10, 20, 30, 0.1);
    box-shadow: 0 0 20px rgba(56, 189, 248, 0.1) inset;
  }

  ul[class^="ring"] li {
    display: block;
    position: absolute;
    top: 50%;
    left: 50%;
    width: 2.2em;
    height: 2.2em;
    margin: -1.1em;
  }

  .orbit-center {
    z-index: 55;
    font-size: 2em;
    width: 2em;
    height: 2em;
    line-height: 2em;
    text-align: center;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border: 2px solid rgba(56, 189, 248, 0.4);
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    color: white;
    box-shadow: 
      0 0 20px rgba(56, 189, 248, 0.5),
      0 0 40px rgba(56, 189, 248, 0.2),
      inset 0 0 20px rgba(255, 255, 255, 0.1);
    position: relative;
    overflow: visible;
    /* Posicionar el centro en la base superior del semicírculo inferior */
    transform: translateY(30%);
  }

  .orbit-center__icon {
    position: relative;
    transition: all 400ms ease-in-out;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .orbit-center:hover .orbit-center__icon {
    transform: scale(1.1);
  }

  .code-icon {
    animation: pulse 2s ease-in-out infinite alternate;
    filter: drop-shadow(0 0 8px rgba(56, 189, 248, 0.3));
  }

  @keyframes pulse {
    0% {
      opacity: 0.8;
      transform: scale(1);
    }
    100% {
      opacity: 1;
      transform: scale(1.05);
    }
  }

  .center-dots {
    position: absolute;
    width: 100%;
    height: 100%;
    pointer-events: none;
  }

  .dot {
    position: absolute;
    width: 4px;
    height: 4px;
    background: rgba(56, 189, 248, 0.8);
    border-radius: 50%;
    animation: orbit-dots 3s linear infinite;
  }

  .dot-1 {
    top: 10%;
    right: 20%;
    animation-delay: 0s;
  }

  .dot-2 {
    bottom: 15%;
    left: 15%;
    animation-delay: 1s;
  }

  .dot-3 {
    top: 50%;
    left: 5%;
    animation-delay: 2s;
  }

  @keyframes orbit-dots {
    0%, 50% {
      opacity: 0.3;
      transform: scale(0.8);
    }
    25% {
      opacity: 1;
      transform: scale(1.2);
    }
  }

  @keyframes clockwiseRotate {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  @keyframes counterClockwiseRotate {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(-360deg);
    }
  }

  /* Pantallas muy grandes */
  @media (min-width: 3600px) {
    .orbit-wrap {
      font-size: 1.8em;
    }
  }

  /* Pantallas grandes */
  @media (min-width: 1400px) and (max-width: 1799px) {
    .orbit-wrap {
      font-size: 1.6em;
    }
  }

  /* Pantallas medianas-grandes */
  @media (min-width: 1200px) and (max-width: 1399px) {
    .orbit-wrap {
      font-size: 1.5em;
    }
  }

  /* Laptops y pantallas medianas */
  @media (min-width: 992px) and (max-width: 1199px) {
    .orbit-wrap {
      font-size: 1.4em;
    }
  }

  /* Tablets y pantallas pequeñas */
  @media (min-width: 768px) and (max-width: 991px) {
    .orbit-wrap {
      font-size: 1.2em;
    }
  }

  /* Tablets pequeñas */
  @media (min-width: 576px) and (max-width: 767px) {
    .orbit-wrap {
      font-size: 1em;
    }
  }

  /* Móviles */
  @media (max-width: 575px) {
    .orbit-wrap {
      font-size: 0.7em;
    }
  }
</style>
