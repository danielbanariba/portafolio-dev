---
import { educations } from '../data/education';
---

<section class="py-16 bg-gray-900">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl font-bold text-white mb-8">Formaci√≥n</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {educations.map((education) => (
        <div class="bg-gray-800 p-4 rounded-lg flex items-start">
          <div class="flex-shrink-0 mr-4">
            <img 
              src={education.logoUrl} 
              alt={`Logo de ${education.institution}`} 
              class="w-16 h-16 object-contain"
            />
          </div>
          <div>
            <h3 class="text-xl font-semibold text-white">{education.title}</h3>
            <p class="text-gray-400">{education.institution}</p>
            <p class="text-sm text-gray-500">{education.date}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>