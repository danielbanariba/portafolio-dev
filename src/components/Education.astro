---
import { educations } from '../data/education';
---

<section class="py-16 bg-gray-900">
  <div class="max-w-6xl mx-auto px-4 sm:px-0 lg:px-0">
    <h2 class="text-3xl font-bold text-white mb-8">Formaci√≥n</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {educations.map((education, index) => (
        <div class="education-card relative inline-flex active:scale-[0.99] transition overflow-hidden rounded-lg p-[1px] focus:outline-none" key={index}>
          <span
            class="absolute inset-[-1000%] animate-[spin_2s_linear_infinite] bg-[conic-gradient(from_90deg_at_50%_50%,#e7029a_0%,#f472b6_50%,#bd5fff_100%)]"
          ></span>
          <div class="relative bg-gray-800 p-4 rounded-lg flex items-start w-full">
            <div class="flex-shrink-0 mr-4">
              <img
                src={education.logoUrl}
                alt={`Logo de ${education.institution}`}
                class="w-16 h-16 object-contain"
              />
            </div>
            <div class="flex-grow">
              <div class="flex items-center justify-between">
                <h3 class="text-xl font-semibold text-white">{education.title}</h3>
                {education.certificateUrl && (
                  <a
                    href={education.certificateUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="group"
                  >
                    <img
                      src={education.iconUrl}
                      alt="Verificar certificado"
                      class="w-8 h-8 transition-colors duration-300 ease-in-out [filter:invert(1)] group-hover:[filter:invert(1)_sepia(1)_saturate(5000%)_hue-rotate(240deg)]"
                    />
                  </a>
                )}
              </div>
              <p class="text-gray-400">{education.institution}</p>
              <p class="text-sm text-gray-500">{education.date}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  @keyframes spin {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  .education-card {
    transition: all 0.3s ease;
  }

  .education-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const cards = document.querySelectorAll('.education-card span');
    cards.forEach((card) => {
      const delay = Math.random() * 2; // Genera un retraso aleatorio entre 0 y 2 segundos
      card.style.animationDelay = `${delay}s`;
    });
  });
</script>