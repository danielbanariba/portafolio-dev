<section id="experience" class="py-16 bg-gray-900">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-4xl font-bold text-white mb-12 text-center">
      Experiencia Laboral
    </h2>
    <div class="relative">
      <!-- Línea vertical oculta en móvil -->
      <svg class="absolute left-1/2 transform -translate-x-1/2 hidden md:block" width="8" height="100%" xmlns="http://www.w3.org/2000/svg">
        <line x1="4" y1="0" x2="4" y2="100%" stroke="#374151" stroke-width="4"></line>
        <line class="vertical-line" x1="4" y1="0" x2="4" y2="100%" stroke="#3879E7" stroke-width="4"></line>
      </svg>
      
      {experiences.map((experience: Experience, index: number) => (
        <div class={`relative flex items-center mb-8 ${index % 2 === 0 ? "justify-start md:justify-start" : "justify-start md:justify-end"}`}>
          <div class={`w-full md:w-[45%] ${index % 2 === 0 ? "md:pr-8" : "md:pl-8"}`}>
            <div class="bg-gray-800 p-6 rounded-lg shadow-lg">
              <h3 class="text-xl font-bold text-white mb-2">
                {experience.title}
              </h3>
              {experience.positions.map((position) => (
                <div class="mb-6">
                  <div class="text-gray-400 mb-3">
                    <span class="font-medium">{position.role}</span>
                    {position.period && (
                      <span class="text-sm text-gray-500">
                        {" "}
                        • {position.period}
                      </span>
                    )}
                  </div>
                  <ul class="list-disc list-inside text-gray-300">
                    {position.points.map((point) => (
                      <li class="mb-2">{point}</li>
                    ))}
                  </ul>
                </div>
              ))}
            </div>
          </div>
          
          <!-- Logo con círculo y fecha -->
          <div class="absolute left-1/2 transform -translate-x-1/2 hidden md:block">
            <div class="flex items-center" style="margin-left: 240px;">
              <div class="logo-circle">
                <div class="logo-container">
                  <img
                    src={experience.icon}
                    alt={experience.company}
                    class="w-12 h-12"
                  />
                </div>
              </div>
              <span class="text-white text-lg whitespace-nowrap ml-4">
                {experience.date}
              </span>
            </div>
            
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .vertical-line {
    stroke-dasharray: 1000;
    stroke-dashoffset: 1000;
    transition: stroke-dashoffset 0.5s ease;
  }

  .logo-circle {
    width: 120px;
    height: 120px;
    background: #374151;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    z-index: 10;
    border: 2px solid #374151;
  }

  .logo-circle::before {
    content: '';
    position: absolute;
    width: 110px;
    height: 110px;
    background: #3879E7;
    border-radius: 50%;
    z-index: -1;
    border: 2px solid #3879E7;
  }

  .logo-container {
    width: 105px;
    height: 105px;
    background: #1F2937;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .logo-container img {
    width: 90px;
    height: 90px;
    object-fit: contain;
  }
</style>

