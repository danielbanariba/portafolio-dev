<style>
  .icon-container {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 80px;
    height: 80px;
    background: rgba(147, 51, 234, 0.05);
    border-radius: 50%;
    border: 1px solid rgba(147, 51, 234, 0.2);
    transition: all 0.3s ease;
  }

  .icon-container:hover {
    background: rgba(147, 51, 234, 0.1);
    transform: translateY(-3px);
  }
</style>
