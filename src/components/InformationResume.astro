---
// Calculate years of experience based on starting year
const startYear = 2022; // Set this to when you started your career
const currentYear = new Date().getFullYear();
const yearsOfExperience = currentYear - startYear;
---

<div class="grid grid-cols-4 gap-8 mb-8">
  <!-- Años de Experiencia -->
  <div class="text-center">
    <div class="icon-container mx-auto mb-4">
      <svg
        width="60"
        height="60"
        viewBox="0 0 24 24"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
        class="mx-auto"
      >
        <path
          d="M12 21C16.9706 21 21 16.9706 21 12C21 7.02944 16.9706 3 12 3C7.02944 3 3 7.02944 3 12C3 16.9706 7.02944 21 12 21Z"
          stroke="#9333EA"
          stroke-width="1.5"
          stroke-linecap="round"
          stroke-linejoin="round"></path>
        <path
          d="M12 7V12L15 15"
          stroke="#9333EA"
          stroke-width="1.5"
          stroke-linecap="round"
          stroke-linejoin="round"></path>
        <path
          d="M12 21C16.9706 21 21 16.9706 21 12C21 7.02944 16.9706 3 12 3"
          stroke="#9333EA"
          stroke-width="1.5"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-dasharray="1 3"></path>
      </svg>
    </div>
    <h3 class="text-4xl font-bold text-purple-400">+{yearsOfExperience}</h3>
    <p class="text-gray-400">Años de Experiencia</p>
  </div>

  <!-- Proyectos Personales -->
  <div class="text-center">
    <div class="icon-container mx-auto mb-4">
      <svg
        width="60"
        height="60"
