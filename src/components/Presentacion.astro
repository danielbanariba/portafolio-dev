---
import ProfileImage from "../components/ProfileImage.astro";
import DownloadButton from "../components/DownloadButton.astro";
---

<div class="grid md:grid-cols-[1fr,1.5fr] gap-12 items-center mb-1">
  <div>
    <div class="animated-title">
      <p>
        <span class="profession">Ingeniero de Software</span>
        <span class="name">Daniel<br />Banariba</span>
        <span class="profession">Programador Entusiasta</span>
      </p>
    </div>
    <div class="grid grid-cols-2 gap-4 mt-8 buttons-container">
      <DownloadButton />
      <a
        href="#experience"
        class="bg-gray-800 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded transition duration-300 flex items-center justify-center"
      >
        Mi Experiencia
      </a>
      <a
        href="https://github.com/danielbanariba"
        target="_blank"
        rel="noopener noreferrer"
        class="github-button md:hidden flex items-center justify-center"
      >
        <svg
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
          fill="#ffffff"
          class="w-6 h-6 mr-2"
        >
          <path
            d="M12,2A10,10,0,0,0,8.84,21.5c.5.08.66-.23.66-.5V19.31C6.73,19.91,6.14,18,6.14,18A2.69,2.69,0,0,0,5,16.5c-.91-.62.07-.6.07-.6a2.1,2.1,0,0,1,1.53,1,2.15,2.15,0,0,0,2.91.83,2.16,2.16,0,0,1,.63-1.34C8,16.17,5.62,15.31,5.62,11.5a3.87,3.87,0,0,1,1-2.71,3.58,3.58,0,0,1,.1-2.64s.84-.27,2.75,1a9.63,9.63,0,0,1,5,0c1.91-1.29,2.75-1,2.75-1a3.58,3.58,0,0,1,.1,2.64,3.87,3.87,0,0,1,1,2.71c0,3.82-2.34,4.66-4.57,4.91a2.39,2.39,0,0,1,.69,1.85V21c0,.27.16.59.67.5A10,10,0,0,0,12,2Z"
          ></path>
        </svg>
        GITHUB
      </a>
      <a
        href="https://www.linkedin.com/in/danielbanariba/"
        target="_blank"
        rel="noopener noreferrer"
        class="linkedin-button md:hidden flex items-center justify-center"
      >
        <svg
          class="w-6 h-6 fill-current mr-2"
          viewBox="0 0 100 100"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            d="M92.86,0H7.12A7.17,7.17,0,0,0,0,7.21V92.79A7.17,7.17,0,0,0,7.12,100H92.86A7.19,7.19,0,0,0,100,92.79V7.21A7.19,7.19,0,0,0,92.86,0ZM30.22,85.71H15.4V38H30.25V85.71ZM22.81,31.47a8.59,8.59,0,1,1,8.6-8.59A8.6,8.6,0,0,1,22.81,31.47Zm63,54.24H71V62.5c0-5.54-.11-12.66-7.7-12.66s-8.91,6-8.91,12.26V85.71H39.53V38H53.75v6.52H54c2-3.75,6.83-7.7,14-7.7,15,0,17.79,9.89,17.79,22.74Z"
          ></path>
        </svg>
        DANIEL ANARIBA
      </a>
    </div>
  </div>
  <div class="relative profile-container md:block hidden">
    <ProfileImage />
  </div>
</div>

<canvas id="particleCanvas"></canvas>

<style>
  .animated-title {
    text-align: center;
    margin: 0;
    position: relative;
    height: 300px;
  }

  .animated-title p {
    text-transform: uppercase;
    letter-spacing: 0.5em;
    display: inline-block;
    padding: 1.5em 0;
    position: absolute;
    top: 50%;
    left: 50%;
    width: 80%;
    max-width: 40em;
    margin: 0;
    transform: translate(-50%, -50%);
  }

  .animated-title p .profession {
    color: #ffffff;
    font-size: 0.9em;
  }

  .animated-title p .name {
    font:
      700 6em/1 "Oswald",
      sans-serif;
    letter-spacing: 0;
    padding: 0.1em 0 0.125em;
    display: block;
    margin: 0 auto;
    background: linear-gradient(45deg, #cbd5e1, #6b7280);
    background-size: cover;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    position: relative;
    z-index: 2;
  }

  #particleCanvas {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
    pointer-events: none;
  }

  .github-button,
  .linkedin-button {
    font-size: 0.875rem;
    font-weight: 700;
    text-transform: uppercase;
    color: #ffffff;
    border-radius: 0.25rem;
    transition: all 0.3s ease;
    text-decoration: none;
    padding: 0.5rem;
  }

  .github-button {
    background-color: #24292e;
  }

  .linkedin-button {
    background-color: #0077b5;
  }

  .github-button:hover,
  .linkedin-button:hover {
    opacity: 0.9;
  }

  @media (max-width: 768px) {
    .animated-title p {
      width: 90%;
    }

    .animated-title p .name {
      font-size: 4em;
    }
  }

  @media (min-width: 769px) {
    .animated-title p {
      width: 40em;
    }

    .animated-title p .name {
      font-size: 6em;
    }

    .buttons-container {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
  }
</style>
