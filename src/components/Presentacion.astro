---
import ProfileImage from "../components/ProfileImage.astro";
import DownloadButton from "../components/DownloadButton.astro";
---

<div class="grid md:grid-cols-[1fr,1.5fr] gap-12 items-center mb-1">
  <div>
    <div class="animated-title">
      <p>
        <span class="profession">Ingeniero de Software</span>
        <span class="name">Daniel<br>Banariba</span>
        <span class="profession">Programador Entusiasta</span>
      </p>
    </div>
    <div class="flex justify-center items-center space-x-4 mt-8 buttons-container">
      <DownloadButton />
      <a href="#projects" class="bg-gray-800 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded transition duration-300">
        Mi Trabajo
      </a>
    </div>
  </div>
  <div class="relative profile-container">
    <ProfileImage />
  </div>
</div>

<canvas id="particleCanvas"></canvas>

<style>
  .animated-title {
    text-align: center;
    margin: 0;
    position: relative;
    height: 300px;
  }

  .animated-title p {
    text-transform: uppercase;
    letter-spacing: 0.5em;
    display: inline-block;
    padding: 1.5em 0;
    position: absolute;
    top: 50%;
    left: 50%;
    width: 80%;
    max-width: 40em;
    margin: 0;
    transform: translate(-50%, -50%);
  }

  .animated-title p .profession {
    color: #ffffff;
    font-size: 0.9em;
  }

  .animated-title p .name {
    font: 700 6em/1 "Oswald", sans-serif;
    letter-spacing: 0;
    padding: 0.10em 0 0.125em;
    display: block;
    margin: 0 auto;
    background: linear-gradient(45deg, #cbd5e1, #6b7280);
    background-size: cover;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    position: relative;
    z-index: 2;
  }

  #particleCanvas {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
    pointer-events: none;
  }

  .centered {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  @media (max-width: 853px) and (max-height: 1280px),
         (max-width: 768px) and (max-height: 1024px),
         (max-width: 820px) and (max-height: 1180px),
         (max-width: 1024px) and (max-height: 1366px),
         (max-width: 912px) and (max-height: 1368px) {
    .buttons-container, .profile-container {
      display: flex;
      justify-content: center;
      align-items: center;
    }
  }

  @media (max-width: 768px) {
    .animated-title p {
      width: 90%;
    }

    .animated-title p .name {
      font-size: 4em;
    }
  }

  @media (min-width: 769px) {
    .animated-title p {
      width: 40em;
    }

    .animated-title p .name {
      font-size: 6em;
    }
  }
</style>