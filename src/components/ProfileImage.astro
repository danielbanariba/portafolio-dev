<div class="container">
  <div class="main-monitor">
    <div class="bar">
      <div class="button" id="red"></div>
      <div class="button" id="yellow"></div>
      <div class="button" id="green"></div>
    </div>
    <div class="screen">
      <ul>
        {[...Array(30)].map(() => (
          <li></li>
        ))}
      </ul>
    </div>
  </div>
  <div class="profile-image">
    <img
      src="/img/avatar2.jpg"
      alt="Foto de perfil de Daniel Banariba"
      class="avatar-img"
    />
  </div>
</div>

<style>
  :root {
    --ideBackground: #301353;
    --buttonRed: #FF4766;
    --buttonYellow: #FFB023;
    --buttonGreen: #4CAF50;
    --buttonOffset: 20px;
  }

  .container {
    width: 450px;
    height: 450px;
    background: var(--background);
    border-radius: 100%;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .main-monitor {
    width: 280px;
    height: 220px;
    background: var(--ideBackground);
    border-radius: 10px;
    overflow: hidden;
    border: 6px solid #b8bae0;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    position: absolute;
    top: 50%;
    left: 30px;
    transform: translateY(-50%);
  }

  .bar {
    height: 25px;
    background: black;
    display: flex;
    align-items: center;
    padding-left: 8px;
  }

  .button {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    margin-right: 6px;
  }

  #red { background: var(--buttonRed); }
  #yellow { background: var(--buttonYellow); }
  #green { background: var(--buttonGreen); }

  .screen {
    height: calc(100% - 25px);
    overflow: hidden;
    position: relative;
  }

  .screen ul {
    list-style: none;
    padding: 0;
    margin: 0;
    position: absolute;
    top: 0;
    animation: codeMove 10s linear infinite;
  }

  .screen li {
    height: 5px;
    margin: 6px 0;
    border-radius: 2px;
    margin-left: 10px;
  }

  .screen li:nth-child(3n) {
    background: var(--buttonRed);
    width: 160px;
  }

  .screen li:nth-child(3n+1) {
    background: var(--buttonGreen);
    width: 200px;
  }

  .screen li:nth-child(3n+2) {
    background: var(--buttonYellow);
    width: 120px;
  }

  .profile-image {
    width: 220px;
    height: 220px;
    border-radius: 50%;
    overflow: hidden;
    border: 4px solid #8B5CF6;
    box-shadow: 0 0 20px rgba(139, 92, 246, 0.5);
    position: absolute;
    top: 50%;
    right: 30px;
    transform: translateY(-50%);
  }

  .avatar-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  @keyframes codeMove {
    0% { top: 0; }
    100% { top: -50%; }
  }
</style>