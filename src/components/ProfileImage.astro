<div class="container">
  <div class="small-monitor">
    <div class="bar">
      <div class="button" id="red"></div>
      <div class="button" id="yellow"></div>
      <div class="button" id="green"></div>
    </div>
    <div class="screen">
      <ul class="code">
        {[...Array(17)].map((_, i) => (
          <li class={i >= 7 && i <= 10 ? "inline-code" : ""}></li>
        ))}
      </ul>
    </div>
  </div>
  <div class="main-monitor">
    <div class="bar">
      <div class="button" id="red"></div>
      <div class="button" id="yellow"></div>
      <div class="button" id="green"></div>
    </div>
    <div class="screen">
      <ul>
        {[...Array(30)].map(() => (
          <li></li>
        ))}
      </ul>
    </div>
  </div>
  <div class="profile-image">
    <img
      src="/img/avatar2.jpg"
      alt="Foto de perfil de Daniel Banariba"
      class="avatar-img"
    />
  </div>
</div>

<style>
  :root {
    --windowFrame: #393d73;
    --windowMetal: #a6a9d3;
    --ideBackground: #301353;
    --buttonRed: #FF4766;
    --buttonYellow: #FFB023;
    --buttonGreen: #4CAF50;
    --buttonOffset: 20px;
  }

  .container {
    width: 450px;
    height: 450px;
    position: relative;
    background: transparent;
  }

  .small-monitor, .main-monitor {
    position: absolute;
    border-radius: 10px;
    background: var(--ideBackground);
    overflow: hidden;
    border: 8px solid #b8bae0;
    border-bottom: 50px solid #b8bae0;
    box-shadow: -5px 5px var(--windowMetal);
  }

  .small-monitor {
    width: 160px;
    height: 210px;
    top: 20%;
    left: 10px;
  }

  .main-monitor {
    width: 250px;
    height: 200px;
    top: 30%;
    left: 25%;
  }

  .bar {
    position: absolute;
    width: 100%;
    height: 30px;
    background: black;
    z-index: 5;
  }

  .button {
    position: absolute;
    margin-left: 10px;
    margin-top: 10px;
    margin-right: 15px;
    width: 10px;
    height: 10px;
    border-radius: 100%;
  }

  #red { background: var(--buttonRed); }
  #yellow {
    left: var(--buttonOffset);
    background: var(--buttonYellow);
  }
  #green {
    left: calc(var(--buttonOffset) * 2);
    background: var(--buttonGreen);
  }

  .screen {
    position: absolute;
    width: 100%;
    height: calc(100% - 30px);
    top: 30px;
    overflow: hidden;
  }

  .screen ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .screen li {
    position: relative;
    height: 5px;
    margin: 5px 0;
    left: -20px;
    border-radius: 5px;
  }

  .small-monitor .screen li {
    width: 80px;
    background: var(--buttonGreen);
  }

  .small-monitor .screen li:nth-child(n+5):nth-child(-n+7) {
    background: var(--buttonRed);
    width: 60px;
    left: 8px;
  }

  .small-monitor .screen li:nth-child(n+8) {
    background: var(--buttonYellow);
    width: 40px;
  }

  .main-monitor .screen ul {
    position: absolute;
    top: 0;
    animation: codeMove 5s linear infinite;
  }

  .main-monitor .screen li:nth-child(3n) {
    background: var(--buttonRed);
    width: 60px;
  }

  .main-monitor .screen li:nth-child(3n+1) {
    background: var(--buttonGreen);
    width: 80px;
  }

  .main-monitor .screen li:nth-child(3n+2) {
    background: var(--buttonYellow);
    width: 45px;
  }

  .profile-image {
    position: absolute;
    width: 350px;
    height: 350px;
    top: 50%;
    left: 90%;
    transform: translate(-50%, -50%);
    z-index: 10;
    border-radius: 50%;
    overflow: hidden;
    border: 4px solid #8B5CF6;
    box-shadow: 0 0 20px rgba(139, 92, 246, 0.5);
  }

  .avatar-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  @keyframes codeMove {
    100% { top: -60%; }
  }

  @media (max-width: 768px) {
    .container {
      width: 100%;
      height: auto;
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 20px;
    }

    .small-monitor, .main-monitor {
      position: relative;
      top: auto;
      left: auto;
      margin-bottom: 20px;
    }

    .profile-image {
      position: relative;
      width: 200px;
      height: 200px;
      top: auto;
      left: auto;
      transform: none;
      margin-bottom: 20px;
      order: -1; /* Esto coloca la imagen de perfil al principio en m√≥viles */
    }
  }
</style>