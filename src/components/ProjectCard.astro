---
import HoverEffect from './HoverEffect';

interface Props {
  title: string;
  imageUrl: string;
  description: string;
  technologies: string[];
  githubUrl: string;
  projectUrl?: string;
}

const { title, imageUrl, description, technologies, githubUrl, projectUrl } = Astro.props;
---

<HoverEffect
  client:load
  title={title}
  imageUrl={imageUrl}
  description={description}
  technologies={technologies}
  githubUrl={githubUrl}
  projectUrl={projectUrl}
/>