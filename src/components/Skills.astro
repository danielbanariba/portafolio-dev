---
import SkillSection from './SkillSection.astro';

const backendSkills = [
  { name: 'Python', icon: '/icon/python.svg' },
  { name: 'Java', icon: '/icon/java.svg' },
  { name: 'C++', icon: '/icon/cpp.svg' },
];

const frontendSkills = [
  { name: 'HTML', icon: '/icon/html5.svg' },
  { name: 'CSS', icon: '/icon/css.svg' },
  { name: 'JavaScript', icon: '/icon/javascript.svg' },
  { name: 'Tailwind CSS', icon: '/icon/tailwindcss.svg' },
];

const frameworkSkills = [
  { name: 'Reflex', icon: '/icon/reflex.svg' },
  { name: 'FastAPI', icon: '/icon/fastapi.svg' },
  { name: 'Spring', icon: '/icon/spring.svg' },
];

const databaseSkills = [
  { name: 'Oracle', icon: '/icon/oracle.svg' },
  { name: 'MySQL', icon: '/icon/mysql.svg' },
  { name: 'PostgreSQL', icon: '/icon/postgresql.svg' },
  { name: 'MongoDB', icon: '/icon/mongodb.svg' },
];
---

<div class="w-full max-w-6xl space-y-8 bg-gray-900 p-8 rounded-lg">
  <h2 class="text-3xl font-bold mb-8 text-white">Mis Habilidades</h2>
  
  <SkillSection title="Backend" skills={backendSkills} />
  <SkillSection title="Frontend" skills={frontendSkills} />
  <SkillSection title="Frameworks" skills={frameworkSkills} />
  <SkillSection title="Gestores de Bases de Datos" skills={databaseSkills} />
</div>