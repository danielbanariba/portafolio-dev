---
import Layout from './Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
  <Navbar />
  <main class="bg-gray-900 min-h-screen">
    <div class="max-w-4xl mx-auto px-8 sm:px-10 lg:px-12 pt-24 pb-8">
      <article class="prose prose-invert prose-lg max-w-none">
        <h1 class="text-4xl font-bold text-purple-400 mb-6">{frontmatter.title}</h1>
        <slot />
      </article>
    </div>
  </main>
  <Footer />
</Layout>

<style is:global>
  .prose {
    @apply text-gray-300 text-lg leading-relaxed;
  }
  .prose h1 {
    @apply text-4xl font-bold text-purple-400 mb-8 pb-2 border-b border-gray-700;
  }
  .prose h2 {
    @apply text-3xl font-semibold text-blue-400 mt-12 mb-6 pb-2 border-b border-gray-700;
  }
  .prose h3 {
    @apply text-2xl font-semibold text-purple-300 mt-8 mb-4;
  }
  .prose p {
    @apply mb-6;
  }
  .prose a {
    @apply text-blue-400 hover:text-blue-300 transition-colors duration-200 underline;
  }
  .prose strong {
    @apply text-white font-semibold;
  }
  .prose ul, .prose ol {
    @apply my-6 ml-6;
  }
  .prose li {
    @apply mb-2;
  }
  .prose blockquote {
    @apply text-gray-400 border-l-4 border-purple-500 pl-4 py-2 my-6 bg-gray-800 rounded-r italic;
  }
  .prose code {
    @apply text-pink-300 bg-gray-800 px-1.5 py-0.5 rounded text-sm font-mono;
  }
  .prose pre {
    @apply bg-gray-800 p-4 rounded-lg overflow-x-auto my-6 text-sm shadow-md;
  }
  .prose pre code {
    @apply text-gray-300 bg-transparent p-0;
  }
  .prose img {
    @apply rounded-lg shadow-lg border border-gray-700 my-8 mx-auto;
  }
  .prose figure {
    @apply my-8;
  }
  .prose figure figcaption {
    @apply text-center text-gray-400 mt-2 text-sm;
  }
  .prose table {
    @apply border-collapse border border-gray-700 my-6 w-full;
  }
  .prose td, .prose th {
    @apply border border-gray-700 px-4 py-2;
  }
  .prose th {
    @apply bg-gray-800 text-white font-semibold;
  }
  .prose hr {
    @apply border-gray-700 my-10;
  }
  .prose .anchor {
    @apply ml-2 text-gray-500 opacity-0 transition-opacity duration-200;
  }
  .prose h2:hover .anchor, .prose h3:hover .anchor {
    @apply opacity-100;
  }
</style>